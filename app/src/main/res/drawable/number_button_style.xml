<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"><!--没点击按钮的时候-->
        <shape android:shape="rectangle"><!--按钮形状-->
            <solid android:color="#FFFFFF" /><!--按钮背景色-->
            <stroke
                android:width="1dp"
                android:color="@color/colorButtonLine" /><!--按钮边框-->
        </shape>
    </item>
    <item android:drawable="@color/colorButtonPress" android:state_pressed="true" /><!--当点击按钮的时候的颜色-->
</selector>