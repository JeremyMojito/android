<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/desk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFD1D0"
    android:orientation="vertical"
    tools:context="font.calculator.MainActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/formula"
        android:fontFamily="@font/dengxian"
        android:gravity="right"
        android:textColor="#080808"
        android:textSize="45sp"></TextView>

    <TextView
        android:id="@+id/formula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button"
        android:background="#BEBCBE"
        android:fontFamily="@font/dengxian"
        android:textSize="30sp"></TextView>

    <TableLayout
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#E6E6E6"
        android:shrinkColumns="0,1,2,3,4"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="328dp">

        <TableRow
            android:id="@+id/line0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/memoryClear"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/dengxian"
                android:text="MC"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/memoryReuse"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/dengxian"
                android:text="MR"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/memoryAdd"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/dengxian"
                android:text="M+"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/memorySub"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/dengxian"
                android:text="M-"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/memorySave"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/dengxian"
                android:text="MS"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/percent"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/dengxian"
                android:text="%"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/clearError"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/dengxian"
                android:text="CE"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/clear"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/dengxian"
                android:text="C"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/dengxian"
                android:text="DEL"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/division"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/dengxian"
                android:text="÷"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/sqr"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/dengxian"
                android:text="X²"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/seven"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/number_button_style"
                android:fontFamily="@font/dengxian"
                android:text="7"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/eight"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/number_button_style"
                android:fontFamily="@font/dengxian"
                android:text="8"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/nine"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/number_button_style"
                android:fontFamily="@font/dengxian"
                android:text="9"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/multiplication"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/dengxian"
                android:text="×"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_style">

            <Button
                android:id="@+id/cube"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/dengxian"
                android:text="X³"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/four"
                android:layout_width="77dp"
                android:layout_height="60sp"
                android:background="@drawable/number_button_style"
                android:fontFamily="@font/dengxian"
                android:text="4"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/five"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/number_button_style"
                android:fontFamily="@font/dengxian"
                android:text="5"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/six"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/number_button_style"
                android:fontFamily="@font/dengxian"
                android:text="6"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/subtraction"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/dengxian"
                android:text="-"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/sqrt"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/dengxian"
                android:text="√X"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/number_button_style"
                android:fontFamily="@font/dengxian"
                android:text="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/number_button_style"
                android:fontFamily="@font/dengxian"
                android:text="2"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/number_button_style"
                android:fontFamily="@font/dengxian"
                android:text="3"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/addition"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/dengxian"
                android:text="+"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/fraction"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/dengxian"
                android:text="1/x"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/plusMinus"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/dengxian"
                android:text="±"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/zero"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/number_button_style"
                android:fontFamily="@font/dengxian"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/point"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/dengxian"
                android:text="•"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/equator"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/equator_button_style"
                android:fontFamily="@font/dengxian"
                android:text="="
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
